node {
    
   stage('code')
   { 
       git 'https://github.com/ghanigreen/maven_demo.git'
   }
   stage('build')
   {
       bat 'mvn clean verify'
   }
   stage('deployment')
   {
       deploy adapters: [tomcat9(credentialsId: 'mytomcat', path: '', url: 'http://localhost:8080/')], contextPath: 'mysecondjob', war: '**/*.war' 
   }
}
